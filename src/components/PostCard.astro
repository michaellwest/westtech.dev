---
import TagPill from "./TagPill.astro";

interface Props {
  title: string;
  date: Date;
  description: string;
  tags: string[];
  slug: string;
}

const { title, date, description, tags, slug } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="group py-6 border-b border-zinc-100 dark:border-zinc-800 last:border-0">
  <div class="flex flex-wrap gap-1.5 mb-2">
    {tags.map((tag) => <TagPill tag={tag} />)}
  </div>

  <h2 class="text-lg font-semibold mb-1">
    <a
      href={`/${slug}`}
      class="text-zinc-900 dark:text-zinc-50 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
    >
      {title}
    </a>
  </h2>

  <p class="text-sm text-zinc-600 dark:text-zinc-400 leading-relaxed mb-2">
    {description}
  </p>

  <time
    datetime={date.toISOString()}
    class="text-xs text-zinc-400 dark:text-zinc-500"
  >
    {formattedDate}
  </time>
</article>
