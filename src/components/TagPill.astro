---
interface Props {
  tag: string;
  linked?: boolean;
}

const { tag, linked = true } = Astro.props;
const slug = tag.toLowerCase().replace(/\s+/g, "-");
---

{
  linked ? (
    <a
      href={`/tags/${slug}`}
      class="inline-block px-2.5 py-0.5 rounded-full text-xs font-medium bg-zinc-100 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-300 hover:bg-blue-100 dark:hover:bg-blue-900/30 hover:text-blue-700 dark:hover:text-blue-400 transition-colors"
    >
      {tag}
    </a>
  ) : (
    <span class="inline-block px-2.5 py-0.5 rounded-full text-xs font-medium bg-zinc-100 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-300">
      {tag}
    </span>
  )
}
