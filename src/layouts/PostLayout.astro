---
import BaseLayout from "./BaseLayout.astro";
import TagPill from "../components/TagPill.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  date: Date;
  description: string;
  tags: string[];
}

const { title, date, description, tags } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout title={title} description={description}>
  <Header />

  <main class="flex-1 w-full max-w-2xl mx-auto px-4 py-10 sm:px-6">
    <article>
      <header class="mb-8">
        <div class="flex flex-wrap gap-2 mb-3">
          {tags.map((tag) => <TagPill tag={tag} />)}
        </div>
        <h1 class="text-3xl font-bold tracking-tight text-zinc-900 dark:text-zinc-50 mb-2">
          {title}
        </h1>
        <time
          datetime={date.toISOString()}
          class="text-sm text-zinc-500 dark:text-zinc-400"
        >
          {formattedDate}
        </time>
      </header>

      <!-- Prose styles for rendered Markdown -->
      <div class="prose-styles">
        <slot />
      </div>
    </article>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Scoped prose styles â€” avoids needing @tailwindcss/typography plugin */
  .prose-styles :global(h2) {
    @apply text-xl font-semibold mt-8 mb-3 text-zinc-900 dark:text-zinc-100;
  }
  .prose-styles :global(h3) {
    @apply text-lg font-semibold mt-6 mb-2 text-zinc-900 dark:text-zinc-100;
  }
  .prose-styles :global(p) {
    @apply mb-4 leading-7 text-zinc-700 dark:text-zinc-300;
  }
  .prose-styles :global(a) {
    @apply text-blue-600 dark:text-blue-400 underline underline-offset-2 hover:text-blue-800 dark:hover:text-blue-300;
  }
  .prose-styles :global(ul) {
    @apply list-disc pl-5 mb-4 space-y-1 text-zinc-700 dark:text-zinc-300;
  }
  .prose-styles :global(ol) {
    @apply list-decimal pl-5 mb-4 space-y-1 text-zinc-700 dark:text-zinc-300;
  }
  .prose-styles :global(li) {
    @apply leading-7;
  }
  .prose-styles :global(strong) {
    @apply font-semibold text-zinc-900 dark:text-zinc-100;
  }
  .prose-styles :global(code:not(pre code)) {
    @apply bg-zinc-100 dark:bg-zinc-800 text-zinc-800 dark:text-zinc-200 rounded px-1.5 py-0.5 text-sm font-mono;
  }
  .prose-styles :global(pre) {
    @apply rounded-lg my-5 overflow-x-auto text-sm;
  }
  .prose-styles :global(pre code) {
    @apply block p-4;
  }
  .prose-styles :global(blockquote) {
    @apply border-l-4 border-blue-500 pl-4 italic text-zinc-600 dark:text-zinc-400 my-4;
  }
  .prose-styles :global(hr) {
    @apply border-zinc-200 dark:border-zinc-800 my-8;
  }
  .prose-styles :global(img) {
    @apply rounded-lg my-6 max-w-full;
  }
  .prose-styles :global(table) {
    @apply w-full text-sm border-collapse my-4;
  }
  .prose-styles :global(th) {
    @apply border border-zinc-200 dark:border-zinc-700 bg-zinc-100 dark:bg-zinc-800 px-3 py-2 text-left font-semibold;
  }
  .prose-styles :global(td) {
    @apply border border-zinc-200 dark:border-zinc-700 px-3 py-2;
  }
</style>
