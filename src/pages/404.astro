---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="404 â€” Page Not Found">
  <Header />

  <main class="flex-1 w-full max-w-2xl mx-auto px-4 sm:px-6 py-20 text-center">
    <p class="text-6xl font-mono font-bold text-zinc-200 dark:text-zinc-800 mb-4">404</p>
    <h1 class="text-2xl font-semibold text-zinc-900 dark:text-zinc-50 mb-3">Page not found</h1>
    <p class="text-zinc-500 dark:text-zinc-400 mb-8">
      That page doesn't exist. Maybe it moved, or maybe you mistyped the URL.
    </p>
    <a
      href="/"
      class="inline-block px-4 py-2 rounded-md bg-blue-600 text-white text-sm font-medium hover:bg-blue-700 transition-colors"
    >
      Back to all posts
    </a>
  </main>

  <Footer />
</BaseLayout>
